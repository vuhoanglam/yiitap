{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
	  "strict": false,
	  "noImplicitAny": false,
	  "skipLibCheck": true,
	  "noUncheckedIndexedAccess": true,
    "resolvePackageJsonExports": false,
    "module": "es2022",
    "moduleResolution": "Node",
    "composite": true,
    "outDir": "dist",
    "declarationDir": "types",
    "allowJs": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
